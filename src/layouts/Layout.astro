---
import Navigation from '../components/Navigation.astro';

export interface Props {
  title?: string;
  currentPage?: string;
}

const { title = "Filosofía Interactiva", currentPage = "home" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Plataforma educativa interactiva sobre historia de la filosofía" />
    <title>{title}</title>
  </head>
  <body class="bg-background text-foreground">
    <!-- Navigation -->
    <Navigation currentPage={currentPage} />
    
    <!-- Main Content -->
    <slot />
    
    <!-- Footer -->
    <footer class="bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-700 mt-16">
      <div class="container mx-auto px-4 py-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div>
            <div class="flex items-center space-x-2 mb-4">
              <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                <span class="text-white font-bold text-lg">Φ</span>
              </div>
              <span class="text-xl font-bold text-gray-900 dark:text-white">
                Filosofía Interactiva
              </span>
            </div>
            <p class="text-gray-600 dark:text-gray-300">
              Explora la historia de la filosofía de manera interactiva y participa en discusiones filosóficas.
            </p>
          </div>
          
          <div>
            <h3 class="font-semibold text-gray-900 dark:text-white mb-4">Explorar</h3>
            <ul class="space-y-2 text-gray-600 dark:text-gray-300">
              <li><a href="/" class="hover:text-blue-600 dark:hover:text-blue-400">Línea de Tiempo</a></li>
              <li><a href="/foro" class="hover:text-blue-600 dark:hover:text-blue-400">Foro</a></li>
              <li><a href="#" class="hover:text-blue-600 dark:hover:text-blue-400">Filósofos</a></li>
              <li><a href="#" class="hover:text-blue-600 dark:hover:text-blue-400">Conceptos</a></li>
            </ul>
          </div>
          
          <div>
            <h3 class="font-semibold text-gray-900 dark:text-white mb-4">Comunidad</h3>
            <ul class="space-y-2 text-gray-600 dark:text-gray-300">
              <li><a href="/registro" class="hover:text-blue-600 dark:hover:text-blue-400">Registrarse</a></li>
              <li><a href="/login" class="hover:text-blue-600 dark:hover:text-blue-400">Iniciar Sesión</a></li>
              <li><a href="/perfil" class="hover:text-blue-600 dark:hover:text-blue-400">Mi Perfil</a></li>
              <li><a href="#" class="hover:text-blue-600 dark:hover:text-blue-400">Ayuda</a></li>
            </ul>
          </div>
          
          <div>
            <h3 class="font-semibold text-gray-900 dark:text-white mb-4">Legal</h3>
            <ul class="space-y-2 text-gray-600 dark:text-gray-300">
              <li><a href="#" class="hover:text-blue-600 dark:hover:text-blue-400">Términos</a></li>
              <li><a href="#" class="hover:text-blue-600 dark:hover:text-blue-400">Privacidad</a></li>
              <li><a href="#" class="hover:text-blue-600 dark:hover:text-blue-400">Cookies</a></li>
            </ul>
          </div>
        </div>
        
        <div class="border-t border-gray-200 dark:border-gray-700 mt-8 pt-8 text-center text-gray-600 dark:text-gray-300">
          <p>&copy; 2024 Filosofía Interactiva. Todos los derechos reservados.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  @import '../styles/global.css';
  
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100vh;
  }
</style>
